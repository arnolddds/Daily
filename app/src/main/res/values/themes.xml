<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Daily" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:navigationBarColor">#FEF6FE</item>
        <item name="android:actionOverflowButtonStyle">@style/dailyThemeOverflowButton</item>
        <item name="android:colorControlActivated">@color/blue</item>

    </style>

    <style name="Theme.Daily" parent="Base.Theme.Daily" />

    <style name="dailyThemeTextInputLayout">
        <item name="cursorColor">@color/black</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="dailyThemeTextInputEditText">
        <item name="android:textColorHighlight">#C4E3ED</item>

    </style>

    <style name="dailyThemeOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CalenderViewTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="dailyThemeToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>